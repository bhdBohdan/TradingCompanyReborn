<Window x:Class="TradingCompany.WPF2.Windows.NewProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Product" Height="300" Width="400">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Product name" Grid.Row="0"/>
        <TextBox Grid.Row="0" Margin="120,0,0,4" Width="240" Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Category" Grid.Row="1"/>
        <TextBox Grid.Row="1" Margin="120,0,0,4" Width="240" Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Price" Grid.Row="2"/>
        <TextBox Grid.Row="2" Margin="120,0,0,4" Width="240" Text="{Binding PriceText, UpdateSourceTrigger=PropertyChanged}"/>

        <TextBlock Text="Description" Grid.Row="3" VerticalAlignment="Top"/>
        <TextBox Grid.Row="4" Margin="0,4,0,4" Text="{Binding Description}" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>

        <StackPanel Orientation="Horizontal" Grid.Row="5" HorizontalAlignment="Right" Margin="0,8,0,0">
            <Button Content="Save" Width="80" Margin="4,0" Command="{Binding SaveCommand}"/>
            <Button Content="Cancel" Width="80" Margin="4,0" Command="{Binding CancelCommand}"/>
        </StackPanel>
    </Grid>
</Window>
