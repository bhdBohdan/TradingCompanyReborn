<Window x:Class="TradingCompany.WPF2.Windows.ProductDetails"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product" Height="360" Width="520">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock FontSize="18" FontWeight="Bold" Text="Product" />

        <Grid Grid.Row="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="Name:"/>
            <TextBox  Grid.Row="0" Grid.Column="1"
                      Text="{Binding ProductName, UpdateSourceTrigger=PropertyChanged}"
                      IsReadOnly="{Binding CanEdit, Converter={StaticResource BoolToVis}, ConverterParameter=invert}" />

            <TextBlock Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Text="Category:" Margin="0,8,0,0"/>
            <TextBox  Grid.Row="1" Grid.Column="1" Margin="0,8,0,0"
                      Text="{Binding Category, UpdateSourceTrigger=PropertyChanged}"
                      IsReadOnly="{Binding CanEdit, Converter={StaticResource BoolToVis}, ConverterParameter=invert}" />

            <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Top" Text="Description:" Margin="0,8,0,0"/>
            <TextBox  Grid.Row="3" Grid.Column="1" Margin="0,8,0,0" Height="100"
                      Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                      AcceptsReturn="True" TextWrapping="Wrap"
                      IsReadOnly="{Binding CanEdit, Converter={StaticResource BoolToVis}, ConverterParameter=invert}" />

            <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Price:" Margin="0,8,0,0"/>
            <TextBox  Grid.Row="4" Grid.Column="1" Margin="0,8,0,0"
                      Text="{Binding Price, UpdateSourceTrigger=PropertyChanged}"
                      IsReadOnly="{Binding CanEdit, Converter={StaticResource BoolToVis}, ConverterParameter=invert}" />
        </Grid>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Margin="4,0" Content="Save"   Command="{Binding SaveCommand}"   IsEnabled="{Binding CanEdit}" />
            <Button Width="90" Margin="4,0" Content="Delete" Command="{Binding DeleteCommand}" Visibility="{Binding CanDelete, Converter={StaticResource BoolToVis}}" />
            <Button Width="90" Margin="4,0" Content="Cancel" Command="{Binding CancelCommand}" />
        </StackPanel>

    </Grid>
</Window>
