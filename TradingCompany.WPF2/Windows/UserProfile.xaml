<Window x:Class="TradingCompany.WPF2.Windows.UserProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Profile" Height="520" Width="600">
    <Window.Resources>
        <!-- Edit button: visible when not editing -->
        <Style x:Key="EditButtonStyle" TargetType="Button">
            <Setter Property="Visibility" Value="Visible"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="Visibility" Value="Collapsed"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Buttons visible only in edit mode (Save / Cancel) -->
        <Style x:Key="EditModeButtonStyle" TargetType="Button">
            <Setter Property="Visibility" Value="Collapsed"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="Visibility" Value="Visible"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- TextBoxes: read-only by default, editable when IsEditing == True -->
        <Style x:Key="EditableWhenEditingTextBoxStyle" TargetType="TextBox">
            <Setter Property="IsReadOnly" Value="True"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                    <Setter Property="IsReadOnly" Value="False"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="12">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="12"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Profile picture & actions -->
        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
            <Border Width="160" Height="160" BorderBrush="Gray" BorderThickness="1" CornerRadius="4">
                <Image Source="{Binding ProfileImage}" Stretch="UniformToFill"/>
            </Border>
            <Button Margin="0,8,0,0" Command="{Binding UploadPhotoCommand}" Width="160">Upload Photo</Button>
            <TextBlock Margin="0,12,0,0" FontWeight="Bold" Text="Account" />
            <StackPanel Margin="0,6,0,0">
                <TextBlock FontSize="12" Foreground="Gray" Text="Username"/>
                <TextBlock Text="{Binding Username}" />
                <TextBlock FontSize="12" Foreground="Gray" Margin="0,8,0,0" Text="Email"/>
                <TextBlock Text="{Binding Email}" TextWrapping="Wrap"/>
                <TextBlock FontSize="12" Foreground="Gray" Margin="0,8,0,0" Text="Roles"/>
                <TextBlock Text="{Binding Roles}" TextWrapping="Wrap"/>
            </StackPanel>
        </StackPanel>

        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" FontSize="20" FontWeight="Bold" Text="Profile details" />

            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Text="First name:"/>
                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource EditableWhenEditingTextBoxStyle}"
                 Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Text="Last name:"/>
                <TextBox Grid.Row="2" Grid.Column="1" Style="{StaticResource EditableWhenEditingTextBoxStyle}"
                 Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Text="Gender:"/>
                <ComboBox Grid.Row="4" Grid.Column="1"
                          ItemsSource="{Binding GenderOptions}"
                          SelectedItem="{Binding Gender, UpdateSourceTrigger=PropertyChanged}"
                          IsEnabled="{Binding IsEditing}" />

                <TextBlock Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Text="Phone:"/>
                <TextBox Grid.Row="6" Grid.Column="1" Style="{StaticResource EditableWhenEditingTextBoxStyle}"
                 Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}" />

                <TextBlock Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Text="Address:"/>
                <TextBox Grid.Row="8" Grid.Column="1" Style="{StaticResource EditableWhenEditingTextBoxStyle}"
                 Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}" AcceptsReturn="True" Height="60" TextWrapping="Wrap" />

                <TextBlock Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Text="Bank card:"/>
                <TextBox Grid.Row="10" Grid.Column="1" Style="{StaticResource EditableWhenEditingTextBoxStyle}"
                 Text="{Binding BankCardNumber, UpdateSourceTrigger=PropertyChanged}" />
            </Grid>

            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0" >
                <Button Width="90" Margin="4,0" Style="{StaticResource EditButtonStyle}" Command="{Binding EditCommand}">Edit</Button>
                <Button Width="90" Margin="4,0" Style="{StaticResource EditModeButtonStyle}" Command="{Binding SaveCommand}" IsEnabled="{Binding IsDirty}">Save</Button>
                <Button Width="90" Margin="4,0" Style="{StaticResource EditModeButtonStyle}" Command="{Binding CancelCommand}">Cancel</Button>
                <Button Width="90" Margin="4,0" Command="{Binding CloseCommand}">Close</Button>
            </StackPanel>

            <Button Content="Logout" Command="{Binding LogoutCommand}" HorizontalAlignment="Right" Margin="8" />

        </Grid>
        <!-- Add this button where appropriate in the window layout (example below) -->
    </Grid>
    
</Window>