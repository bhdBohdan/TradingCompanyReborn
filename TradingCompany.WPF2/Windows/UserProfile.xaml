<Window x:Class="TradingCompany.WPF2.Windows.UserProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="My Profile" Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="White">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />

        <!-- COLORS -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#4A90E2"/>
        <SolidColorBrush x:Key="TextGray" Color="#7F8C8D"/>
        <SolidColorBrush x:Key="LightBorder" Color="#E0E0E0"/>

        <!-- DYNAMIC TEXTBOX STYLE
             Matches the "Read Only" vs "Edit Mode" state -->
        <Style x:Key="DynamicTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#333"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- When NOT ReadOnly (Editing Mode), look like an input box -->
                            <Trigger Property="IsReadOnly" Value="False">
                                <Setter Property="Background" Value="#FAFAFA"/>
                                <Setter Property="BorderBrush" Value="{StaticResource LightBorder}"/>
                                <Setter Property="BorderThickness" Value="1"/>
                            </Trigger>
                            <!-- Focus Effect -->
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="IsReadOnly" Value="False"/>
                                    <Condition Property="IsKeyboardFocused" Value="True"/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource PrimaryColor}"/>
                                <Setter TargetName="border" Property="Background" Value="White"/>
                            </MultiTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- COMBOBOX STYLE -->
        <Style x:Key="DynamicComboBox" TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Padding" Value="5"/>
            <Style.Triggers>
                <!-- Hide the dropdown arrow visual when disabled/not editing if you want, 
                     or just keep standard behavior. Here we just simple disable logic. -->
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- BUTTON STYLES -->
        <Style x:Key="ActionBtn" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="OutlineBtn" TargetType="Button" BasedOn="{StaticResource ActionBtn}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#555"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- LEFT SIDEBAR -->
        <Border Grid.Column="0" Background="#F8F9FA" BorderBrush="#E0E0E0" BorderThickness="0,0,1,0">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Profile Image Area -->
                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,30,0,0">
                    <!-- Circular Image Mask -->
                    <Border Width="140" Height="140" CornerRadius="100" BorderBrush="White" BorderThickness="4">
                        <Border.Effect>
                            <DropShadowEffect BlurRadius="10" ShadowDepth="0" Color="#CCC" Opacity="0.5"/>
                        </Border.Effect>
                        <Border.Background>
                            <ImageBrush ImageSource="{Binding ProfileImage}" Stretch="UniformToFill"/>
                        </Border.Background>
                    </Border>

                    <Button Content="Change Photo" Command="{Binding UploadPhotoCommand}" 
                            Foreground="{StaticResource PrimaryColor}" Background="Transparent" BorderThickness="0"
                            Cursor="Hand" Margin="0,10,0,0" FontSize="12">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <TextBlock Text="{TemplateBinding Content}" Foreground="{TemplateBinding Foreground}" TextDecorations="Underline"/>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <TextBlock Text="{Binding Username}" FontSize="22" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,15,0,0"/>
                    <TextBlock Text="{Binding Email}" FontSize="13" Foreground="#888" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center" Margin="0,5"/>

                    <!-- Roles Badge -->
                    <Border Background="#E8F0FE" HorizontalAlignment="Center" CornerRadius="12" Padding="12,4" Margin="0,10">
                        <TextBlock Text="{Binding Roles}" Foreground="{StaticResource PrimaryColor}" FontSize="12" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>

                <!-- Bottom Sidebar Actions -->
                <StackPanel Grid.Row="2" VerticalAlignment="Bottom">
                    <Button Content="Log Out" Command="{Binding LogoutCommand}" Style="{StaticResource OutlineBtn}" BorderBrush="#E74C3C" Foreground="#E74C3C" Width="220"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- RIGHT CONTENT -->
        <Grid Grid.Column="1" Margin="40">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <StackPanel Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Profile Details" FontSize="26" FontWeight="Bold" Foreground="#2C3E50"/>
                <TextBlock Text="Manage your personal information." Foreground="#95A5A6" Margin="0,5,0,0"/>
                <Separator Margin="0,15,0,0" Background="#EEE"/>
            </StackPanel>

            <!-- Form -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- First Name -->
                    <RowDefinition Height="Auto"/>
                    <!-- Last Name -->
                    <RowDefinition Height="Auto"/>
                    <!-- Gender -->
                    <RowDefinition Height="Auto"/>
                    <!-- Phone -->
                    <RowDefinition Height="Auto"/>
                    <!-- Address -->
                    <RowDefinition Height="Auto"/>
                    <!-- Bank Card -->
                </Grid.RowDefinitions>

                <Grid.Resources>
                    <Style TargetType="TextBlock">
                        <Setter Property="Foreground" Value="{StaticResource TextGray}"/>
                        <Setter Property="FontWeight" Value="SemiBold"/>
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="0,0,10,15"/>
                    </Style>
                </Grid.Resources>

                <!-- First Name -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="First Name"/>
                <TextBox Grid.Row="0" Grid.Column="1" Style="{StaticResource DynamicTextBox}" Margin="0,0,0,15"
                         Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"
                         IsReadOnly="{Binding IsEditing, Converter={StaticResource BoolToVis}, ConverterParameter=InvertBool}" />
                <!-- Note: You might need a converter to invert IsEditing boolean for IsReadOnly property. 
                              Or easier: Bind to a property in ViewModel 'IsNotEditing' -->

                <!-- Assuming ViewModel has logic: IsReadOnly = !IsEditing -->
                <!-- If you don't have a converter, swap the binding logic in C# or use a DataTrigger in Style.
                     The Style I wrote above assumes IsReadOnly is set correctly. 
                     For this XAML, I will assume you bind IsReadOnly to a prop or converter. -->

                <!-- Let's assume IsEditing is the master prop. I'll use Style Triggers on the Window Resources to handle this logic cleanly. -->

                <!-- Last Name -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="Last Name"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="0,0,0,15"
                         Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" 
                         IsReadOnly="{Binding IsEditing, Converter={x:Null}}">
                    <!-- Logic handled via Style trigger below -->
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource DynamicTextBox}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="IsReadOnly" Value="False"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="IsReadOnly" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Gender -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="Gender"/>
                <ComboBox Grid.Row="2" Grid.Column="1" Style="{StaticResource DynamicComboBox}"
                          ItemsSource="{Binding GenderOptions}"
                          SelectedItem="{Binding Gender, UpdateSourceTrigger=PropertyChanged}"
                          IsEnabled="{Binding IsEditing}" />

                <!-- Phone -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Phone"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="0,0,0,15"
                         Text="{Binding Phone, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource DynamicTextBox}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="IsReadOnly" Value="False"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="IsReadOnly" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Address -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="Address" VerticalAlignment="Top" Margin="0,5,10,0"/>
                <TextBox Grid.Row="4" Grid.Column="1" Margin="0,0,0,15" Height="60" TextWrapping="Wrap" AcceptsReturn="True"
                         Text="{Binding Address, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource DynamicTextBox}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="IsReadOnly" Value="False"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="IsReadOnly" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Bank Card -->
                <TextBlock Grid.Row="5" Grid.Column="0" Text="Bank Card"/>
                <TextBox Grid.Row="5" Grid.Column="1" Margin="0,0,0,15"
                         Text="{Binding BankCardNumber, UpdateSourceTrigger=PropertyChanged}">
                    <TextBox.Style>
                        <Style TargetType="TextBox" BasedOn="{StaticResource DynamicTextBox}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="IsReadOnly" Value="False"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsEditing}" Value="False">
                                    <Setter Property="IsReadOnly" Value="True"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>
            </Grid>

            <!-- Action Buttons Footer -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">

                <!-- VIEW MODE BUTTONS -->
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Button Content="Close" Command="{Binding CloseCommand}" Style="{StaticResource OutlineBtn}" Width="100" Margin="0,0,10,0"/>
                    <Button Content="Edit Profile" Command="{Binding EditCommand}" Style="{StaticResource ActionBtn}" Width="120"/>
                </StackPanel>

                <!-- EDIT MODE BUTTONS -->
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsEditing}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>

                    <Button Content="Cancel" Command="{Binding CancelCommand}" Style="{StaticResource OutlineBtn}" Width="100" Margin="0,0,10,0"/>
                    <Button Content="Save Changes" Command="{Binding SaveCommand}" IsEnabled="{Binding IsDirty}" Style="{StaticResource ActionBtn}" Width="120"/>
                </StackPanel>

            </StackPanel>
        </Grid>
    </Grid>
</Window>